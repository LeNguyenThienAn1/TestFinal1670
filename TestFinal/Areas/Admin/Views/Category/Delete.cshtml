@model Category
<div class="card shadow border-0 mt-4">
	<div clas="card-header bg-secondary bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-primary"><i class="bi bi-scissors"></i>Delete Category<i class="bi bi-scissors"></i></h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<form method="post">
			<input asp-for="Id" hidden />
			<div class="border p-3 mt-4">
				<div class="row pb-2">
					<h2 class="text-primary">Delete Category</h2>
					<hr />
				</div>

				<div class="form-floating py-2 col-12">
					<input asp-for="Name" disabled class="form-control border-0 shadow" />
					<label asp-for="Name" class="ms-2"></label>
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="DisplayOrder" disabled class="form-control border-0 shadow" />
					<label asp-for="DisplayOrder" class="ms-2"></label>
					<span asp-validation-for="DisplayOrder" class="text-danger"></span>
				</div>
				<div class="row mt-3">
					<div class="col-6 col-md-3">
						<button type="submit" class="btn btn-danger form-control"><i class="bi bi-hammer"></i> Delete</button>
					</div>
					<div class="col-6 col-md-3">
						<a asp-controller="Category" asp-action="Index" class="btn	btn-secondary form-control">
							<i class="bi bi-display"></i> Back to List
						</a>
					</div>
				</div>
			</div>
		</form>

	</div>
</div>





